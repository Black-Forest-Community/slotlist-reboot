# Production Environment Variables Template
# Copy this file to .env and configure with your production values

# Database Configuration
DB_DATABASE=slotlist
DB_USERNAME=postgres
DB_PASSWORD=change-this-secure-password

# Django Configuration
DJANGO_SECRET_KEY=change-this-to-a-random-secret-key
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# JWT Configuration
CONFIG_JWT_SECRET=change-this-to-a-random-jwt-secret
CONFIG_JWT_ISSUER=https://yourdomain.com
CONFIG_JWT_AUDIENCE=https://yourdomain.com

# Steam API Configuration
CONFIG_STEAM_API_SECRET=your-steam-api-key-here

# CORS Configuration (comma-separated list of allowed origins)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend Configuration
BACKEND_URL=https://api.yourdomain.com/api
FRONTEND_PORT=80
FRONTEND_SSL_PORT=443
